@import "@colors"
@import "@styleUtils"

.inputField
  height 34px
  border-radius 4px
  border 1px solid lightGray
  padding 0 8px 0 8px
  font-size 18px
  +placeholderStyle()
    color veryLightGray
    opacity 0.6
    font-size 16px

  &:focus
    border-color primeGreen
    box-shadow 0 0 3px rgba(primeGreen, 0.6)
    outline none