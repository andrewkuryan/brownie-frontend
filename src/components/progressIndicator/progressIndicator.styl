@import "@colors.styl"

.progressIndicator
  position relative
  width 100px
  height 100px
  border-radius 50%
  border 5px solid primeGreen
  animation rotate 1s linear infinite;

  &::before
    content ''
    position absolute
    top -6px
    left -6px
    width calc(100% + 12px)
    height calc(100% + 12px)
    border-radius 50%
    background-image: linear-gradient(90deg, white 20%, transparent 80%)

@keyframes rotate
  from
    transform rotate(360deg)