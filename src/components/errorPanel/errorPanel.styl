@import "@colors.styl"

.errorPanelRoot
  position fixed
  top 40px
  left 50%
  width 70%
  height 50px
  margin-left -35%
  background-color errorColor
  border-radius 8px
  box-shadow 0 0 10px rgba(errorColor, 0.8)
  display flex
  flex-direction row
  align-items center
  justify-content space-between
  padding 0 20px
  visibility hidden
  opacity 0
  z-index -1
  transition opacity 0.5s ease-in-out
  box-sizing border-box
  p
    color white
    font-size 18px
    margin 0
  .outlineButtonRoot
    height 24px
    padding 0
    img
      width 24px
      height 24px
  &.active
    z-index 99
    visibility visible
    opacity 1