@import "@colors.styl"

.verifyStepRoot
  .inputBlock
    display flex
    flex-direction column
    align-items center
    p
      font-size 22px
      font-weight bold
      margin 60px 0 20px 0
    .codeInputWrapper
      display flex
      flex-direction row
      .inputFieldWrapper
        width 45px
        margin-right 15px
        padding 0
        .inputField
          width 43px
          padding 0 13px 0 14px
          box-sizing border-box
        &:last-child
          margin-right 0
    .buttonRoot
      margin-top 60px
  .resendInfoWrapper
    flex 1
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    .resendInfo
      font-size 20px
      font-weight bold
      margin 0
      text-align center
      .resendText
        border-bottom 1px dashed primeGreen
        color primeGreen
        &:hover
          cursor pointer
