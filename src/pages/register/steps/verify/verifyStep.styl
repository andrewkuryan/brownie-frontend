@import "@styleUtils.styl"

.verifyStepRoot
  .inputBlock
    display flex
    flex-direction column
    align-items center
    p
      font-size 22px
      font-weight bold
      margin 60px 0 20px 0
    .codeInputWrapper
      display flex
      flex-direction row
      .inputField
        height 50px
        width 43px
        margin-right 15px
        padding 0 13px 0 14px
        font-size 24px
        box-sizing border-box
        +placeholderStyle()
          font-size 24px
        &:last-child
          margin-right 0
  .buttonRoot
    height 52px
    font-size 24px
    padding 0 16px
    margin-top 40px