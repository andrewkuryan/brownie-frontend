.registerRoot
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  .stepCard
    background-color white
    width 80%
    height 80%
    box-shadow 0 0 8px rgba(0, 0, 0, 0.2)
    .stepContent
      width 100%
      height 90%
    .stepsWrapper
      width 100%
      height 10%
      display flex
      flex-direction row
      align-items center
      justify-content space-around
      .stepPoint
        width 40px
        height 40px
        border-radius 20px
        background-color green
        display flex
        align-items center
        justify-content center
        p
          margin 0
          color white