.registerRoot
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  .stepCard
    position relative
    background-color white
    width 60%
    height 80%
    box-shadow 0 0 8px rgba(0, 0, 0, 0.2)
    display flex
    flex-direction column
    align-items center
    .stepContent
      width 100%
      flex 1
    .stepperRoot
      width 80%
      margin-bottom 40px
    .stepNavigation
      width 80%
      display flex
      justify-content space-between
      position absolute
      top 38px
      .outlineButtonRoot
        display flex
        justify-content center
        align-items center
        width 40px
        height 40px