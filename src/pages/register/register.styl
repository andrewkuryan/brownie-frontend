.registerRoot
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  .stepCard
    position relative
    background-color white
    width 60%
    height 80%
    box-shadow 0 0 8px rgba(0, 0, 0, 0.2)
    display flex
    flex-direction column
    align-items center
    .stepContent
      width 100%
      flex 1
    .stepperRoot
      width 80%
      margin-bottom 40px
    .stepNavigation
      width 80%
      display flex
      justify-content space-between
      position absolute
      top 40px
      .buttonRoot
        display flex
        justify-content center
        align-items center
        width 40px
        height 40px
        border-radius 20px
        background-color white
        pointer-events none
        // &:hover
        //   cursor default
        // &.disabled
        //   pointer-events none
        //   &:hover
        //     cursor default
        &::before
          border-radius 20px
        &::after
          border-radius 20px
          opacity 1
          box-shadow 0 0 5px rgba(black, 0.5)
        img
          width 20px
          height 20px
        &:first-child
          img
            margin-left 8px
        &:last-child
          img
            margin-left 3px