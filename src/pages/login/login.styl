.loginRoot
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  .loginCard
    background-color white
    width 60%
    height 80%
    box-shadow 0 0 8px rgba(0, 0, 0, 0.2)
    display flex
    flex-direction column
    align-items center
    padding 40px
    box-sizing border-box
    h2
      margin 0 0 40px 0
      font-size 28px
    .formField
      display flex
      flex-direction column
      width 100%
      margin-bottom 20px
      &:last-child
        margin-bottom 0
      p
        margin 0 0 12px 0
        font-size 22px
      .inputFieldWrapper
        height 50px
        .inputField
          font-size 24px
        .passwordToggle
          width 30px
          height 30px
    .buttonRoot
      height 52px
      font-size 24px
      padding 0 16px
      margin-top 20px
