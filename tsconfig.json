{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@entity/*": ["src/entity/*"],
      "@api/*": ["src/api/*"],
      "@application/*": ["src/application/*"],
      "@assets/*": ["src/assets/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
}